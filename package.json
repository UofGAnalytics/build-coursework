{
  "name": "build-coursework",
  "private": true,
  "files": [
    "release/*"
  ],
  "bin": {
    "rmarkdown": "./release/cli.js"
  },
  "workspaces": [
    "compiler",
    "template"
  ],
  "version": "1.1.66",
  "repository": "https://github.com/UofGAnalytics/build-coursework.git",
  "author": "David McArthur <david.mcarthur.2@glasgow.ac.uk>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently npm:compiler npm:template -c green,cyan",
    "compiler": "babel-node --extensions .ts dev.ts",
    "template": "npm -w template run dev",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --runInBand",
    "check-types": "tsc",
    "build-release": "tsc && npm -w template run build && npm -w compiler run build && npm run merge-release",
    "merge-release": "mkdirp release && rimraf release/* && cpy template/build/* compiler/build/ --flat && cpy compiler/build/* release/ --flat",
    "release": "cd release && release-it"
  },
  "dependencies": {
