{
  "name": "build-coursework",
  "private": true,
  "files": [
    "release/*"
  ],
  "bin": {
    "rmarkdown": "./release/cli.js"
  },
  "workspaces": [
    "compiler",
    "template"
  ],
  "version": "1.1.22",
  "repository": "https://github.com/UofGAnalytics/build-coursework.git",
  "author": "David McArthur <david.mcarthur.2@glasgow.ac.uk>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently yarn:compiler yarn:template -c green,cyan",
    "compiler": "babel-node --extensions .ts dev.ts",
    "template": "yarn workspace template dev",
    "test": "jest --verbose",
    "check-types": "tsc",
    "build-release": "tsc && yarn workspace template build && yarn workspace compiler build && yarn merge-release",
    "merge-release": "mkdirp release && rimraf release/* && cpy compiler/build/* release/ && cpy template/build/* release/",
    "release": "release-it"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-inline-import": "^3.0.0",
    "concurrently": "^6.0.0",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-plugin-jest": "^24.1.3",
    "import-sort-style-module": "^6.0.0",
    "jest": "^26.6.3",
    "mkdirp": "^1.0.4",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "release-it": "^14.11.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "typescript": "^4.1.3"
  },
  "importSort": {
    ".ts, .tsx, .js, .jsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
