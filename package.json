    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-plugin-jest": "^26.1.1",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.4.7",
    "mkdirp": "^1.0.4",
    "prettier": "^2.5.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "release-it": "^14.12.3",
