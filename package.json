    "mathjax-full": "^3.1.2",
    "mdast-normalize-headings": "^4.0.0",
    "mdast-util-toc": "^7.0.0",
    "mime": "^4.0.0",
    "node-fetch": "^3.2.0",
    "parse-english": "^7.0.0",
    "pdfjs-dist": "^4.0.269",
    "puppeteer": "^21.5.2",
    "puppeteer-core": "^21.5.2",
    "refractor": "^4.7.0",
    "rehype-document": "^7.0.3",
    "rehype-format": "^5.0.0",
    "rehype-highlight": "^7.0.0",
    "rehype-parse": "^9.0.0",
