    "hash-sum": "^2.0.0",
    "highlight.js": "^11.9.0",
    "image-size": "^1.0.1",
    "js-yaml": "^4.0.0",
    "latex": "^0.0.1",
    "lodash": "^4.17.20",
    "lowlight": "^3.1.0",
