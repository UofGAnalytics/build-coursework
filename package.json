    "hash-sum": "^2.0.0",
    "highlight.js": "^11.4.0",
    "image-size": "^1.0.1",
    "js-yaml": "^4.0.0",
    "latex": "^0.0.1",
    "lodash": "^4.17.20",
    "lowlight": "^2.5.0",
    "markdown-table": "^3.0.2",
    "mathjax-full": "^3.1.2",
    "mdast-normalize-headings": "3.1.0",
    "mdast-util-toc": "^6.1.0",
    "mime": "^3.0.0",
    "node-fetch": "^3.2.0",
    "parse-english": "^5.0.0",
    "pdfjs-dist": "^2.12.313",
    "puppeteer": "^13.1.1",
    "puppeteer-core": "^13.1.1",
    "refractor": "^4.7.0",
    "rehype-document": "^6.0.1",
    "rehype-format": "^4.0.1",
    "rehype-highlight": "^5.0.2",
    "rehype-parse": "^8.0.3",
    "rehype-raw": "6.1.1",
