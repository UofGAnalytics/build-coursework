    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-plugin-jest": "^27.6.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.7.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-import-sort": "^0.0.7",
