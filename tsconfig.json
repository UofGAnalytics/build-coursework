{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
